<% @title = "#{ t "page.user-edit-title" }" %>

<h1 class="text-center"><%= @title %></h1>

<div class="container">
  <%= link_to "#{ t "attributes.back" }", root_path, class: 'btn' %>
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        <div class="form-group">
          <%= f.label :password %>
          <%= f.text_field :password, class: 'form-control' %>
        </div>
      </div>
    </div>

    <%= f.submit "#{ t "attributes.edit" }", class: 'btn btn-primary center-block' %>
  <% end %>
</div>

